generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  Doctor
  Patient
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String
  dob       DateTime
  role      Role
  password  String
  createdAt DateTime @default(now())
}
